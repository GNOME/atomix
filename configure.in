dnl Process this file with autoconf to produce a configure script.

AC_INIT(configure.in)
AM_INIT_AUTOMAKE(atomix, 0.9)
AM_CONFIG_HEADER(config.h)

AC_ISC_POSIX
AC_PROG_CC
AM_PROG_CC_STDC
AC_HEADER_STDC

GNOME_COMPILE_WARNINGS

dnl ******************************
dnl pkg-config checks
dnl ******************************

PKG_CHECK_MODULES(ATOMIX, libgnome-2.0 libgnomeui-2.0 libxml-2.0 gdk-pixbuf-2.0 libglade-2.0 libgnomecanvas-2.0)
AC_SUBST(ATOMIX_CFLAGS)
AC_SUBST(ATOMIX_LIBS)

dnl *******************************
dnl Internationalization
dnl ******************************* 

GETTEXT_PACKAGE=atomix
AC_SUBST(GETTEXT_PACKAGE)
AC_DEFINE_UNQUOTED(GETTEXT_PACKAGE,"$GETTEXT_PACKAGE")

dnl Add the languages which your application supports here.
ALL_LINGUAS="da de fr it nl no pl pt ru sv tr zh_TW"
AM_GLIB_GNU_GETTEXT

AC_OUTPUT([
Makefile
po/Makefile.in
src/Makefile])

dnl po/Makefile.in
dnl editor/Makefile
dnl macros/Makefile
dnl levels/Makefile
dnl themes/Makefile
dnl dnl themes/default/Makefile
dnl themes/fabian/Makefile
dnl themes/katomic/Makefile
dnl themes/fabonus/Makefile
dnl themes/bjoern/Makefile
dnl doc/Makefile
dnl doc/C/Makefile
dnl atomix.spec

