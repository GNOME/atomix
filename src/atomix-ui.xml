<Root>

<commands>
	<cmd name="GameNew" _label="_New Game" _tip="Start a new game"
             accel="*Control*n"/>

	<cmd name="GameEnd" _label="_End Game" _tip="End a game"/>

	<cmd name="GameSkip" _label="Skip _level" _tip="Skip the current level"
	     accel="*Control*s"/>

        <cmd name="GameUndo" _label="_Undo move" _tip="Undo the last move"
	     pixtype="stock" pixname="undo" accel="*Control*z"/>

	<cmd name="GameReset" _label="Reset level" _tip="Restores start situation"/>
	
        <cmd name="GamePause" _label="_Pause game" _tip="Pause the running game"
	     accel="*Control*p"/>

        <cmd name="GameContinue" _label="_Continue game" _tip="Continue paused game"
	     accel="*Control*c"/>

	<cmd name="GameScores" _label="_Scores ..." _tip="View highscores"/>

	<cmd name="GameExit" _label="E_xit" _tip="Exit game"
	     pixtype="stock" pixname="quit" accel="*Control*q"/>

	<cmd name="EditPreferences" _label="_Preferences ..." _tip="Set preferences"
	     pixtype="stock" pixname="preferences"/>

	<cmd name="HelpAbout" _label="_About" _tip="View game credits"/>

</commands>

<menu>
        <submenu name="Game" _label="_Game">

		<menuitem name="GameNew" verb=""/>
		<menuitem name="GameEnd" verb=""/>

		<separator/>

		<menuitem name="GameSkip" verb=""/>
		<menuitem name="GameReset" verb=""/>
		<menuitem name="GameUndo" verb=""/>
		<menuitem name="GamePause" verb=""/>
		<menuitem name="GameContinue" verb=""/>

		<separator/>

		<menuitem name="GameScores" verb=""/>

		<seperator/>

		<menuitem name="GameExit" verb=""/>

	</submenu>

	<submenu name="Edit" _label="_Edit">
	        
		<menuitem name="EditPreferences" verb=""/>

	</submenu>

	<submenu name="Help" _label="_Help">

	        <menuitem name="HelpAbout" verb=""/>
	
	</submenu>
</menu>

</Root>
